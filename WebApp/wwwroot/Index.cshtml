@using Personel.ViewModel
@model UsersViewModel

<div id="content">
    <div class="col-md-10 offset-md-1 white z-depth-1 py-1 pt-1">
        <div class="row">
            <div class="col-sm-6 col-md-9 py-1 px-1">
                <a href="@Url.Action("Edit", "Users", new { id = 0 })" id="newuser" class="btn btn-primary waves-effect waves-light">
                    <i class="fa fa-plus left"></i> New User
                </a>
            </div>
            <div class="col-sm-6 col-md-3">
                <div class="md-form">
                    <form id="form-search">
                        <input placeholder="Search..." type="text" id="search" name="filter" value="@Model.Pager.Filter" class="form-control" autofocus="autofocus" onkeyup="startSearchTimer()">
                    </form>
                </div>
            </div>
        </div>
    </div>
    <br />

    <div class="col-md-10 offset-md-1 white z-depth-1 py-1 pt-1">

        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Email</th>
                                <th>Telephone</th>
                                <th>Roles</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("~/Views/Shared/Pager.cshtml", Model.Pager)
</div>
@section Scripts{
    <script>
        var timer;
        function startSearchTimer()
        {
            if (timer) {
                clearTimeout(timer);
            }
            timer = setTimeout(function () {
                document.getElementById('form-search').submit();
            }, 1000);
        }
    </script>
}
