@using Personel.ViewModel
@model RegisterViewModel

<div class="container">
    <div class="row" style="padding-top: 30px;">
        <div class="col-md-3"></div>
        <div class="col-md-6">

            <!--Panel-->
            <div class="card mb-r">
                <div class="card-header white-text primary-color">
                    Register
                </div>
                <form action="@Url.Action("Edit", "Register")" presubmit="validateForm('form',validateLoginForm)" method="post" id="form" data-indicator="false" data-strict-validator="false" data-submitButtonID="register">
                    <div class="card-block">
                        <div class="md-form">
                            <i class="fa fa-envelope prefix"></i>
                            <input type="text" id="firstName" name="firstName" value="@Model.FirstName" class="form-control" required />
                            <label for="firstName" id="lFirstName" data-error="" data-success="">First Name</label>
                        </div>
                        <div class="md-form">
                            <i class="fa fa-envelope prefix"></i>
                            <input type="text" id="lastName" name="lastName" value="@Model.LastName" class="form-control" required />
                            <label for="lastName" id="lLastName" data-error="" data-success="">Last Name</label>
                        </div>
                        <div class="md-form">
                            <i class="fa fa-envelope prefix"></i>
                            <input type="email" id="email" name="email" value="@Model.Email" class="form-control" required />
                            <label for="email" id="lEmail" data-error="" data-success="">Email address</label>
                        </div>
                        <div class="md-form">
                            <i class="fa fa-envelope prefix"></i>
                            <input type="text" id="telephoneNumber" name="telephoneNumber" value="@Model.TelephoneNumber" class="form-control" required />
                            <label for="telephoneNumber" id="lTelephoneNumber" data-error="" data-success="">Telephone Number</label>
                        </div>
                        <div class="md-form">
                            <i class="fa fa-lock prefix"></i>
                            <input type="password" id="password" name="password" value="@Model.Password" class="form-control" required />
                            <label for="password" id="lPassword" data-error="" data-success="">Password</label>
                        </div>
                        <div class="md-form">
                            <i class="fa fa-lock prefix"></i>
                            <input type="password" id="confirmPassword" name="confirmPassword" value="" class="form-control" required />
                            <label for="confirmPassword" id="lConfirmPassword" data-error="" data-success="">Confirm Password</label>
                        </div>
                        <div class="text-center">
                            <button type="button" id="register" class="btn primary-color waves-effect waves-light">Register</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>

@section scripts{
    <script>
        function validateLoginForm() {
            return checkPasswordStrength('password');
        }
    </script>
}