@using Personel.ViewModel
@model ForgotPasswordViewModel

<div class="container">
    <div class="row">
        <div class="col-md-3 col-sm-3"></div>
        <div class="col-md-6 col-sm-6">

            <!--Panel-->
            <div class="card mb-r">
                <div class="card-header white-text primary-color">
                    Forgot Password
                </div>

                <form action="@Url.Action("ForgotPassword", "Account")" presubmit="validateForm('form')" method="post" id="form" data-indicator="false" data-strict-validator="true" data-submitButtonID="login">
                    <div class="card-block">

                        <div class="md-form">
                            <i class="fa fa-envelope prefix"></i>
                            <input type="email" id="email" name="email" value="@Model.Email" class="form-control validate" required />
                            <label for="email" id="lemail" data-error="" data-success="">Your email address</label>
                        </div>

                        <div class="text-center">
                            <button type="button" id="login" class="btn primary-color waves-effect waves-light">Reset Password</button>
                        </div>

                    </div>

                    <div class="modal-footer text-center">
                        <a href="@Url.Action("Login", "Account")" class="btn dsm-skin-secondary-color">Back</a>
                    </div>

                </form>
            </div>
        </div>
        <div class="col-md-3 col-sm-3"></div>
    </div>
</div>