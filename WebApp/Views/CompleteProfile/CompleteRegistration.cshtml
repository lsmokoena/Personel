@using Personel.ViewModel
@model CompleteRegistrationViewModel

<div class="container">
    <div class="row" style="padding-top: 30px;">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <!--Panel-->
            <div class="card mb-r">
                <div class="card-header white-text primary-color">
                    Complete Profile
                </div>
                <form action="@Url.Action("CompleteRegistration", "CompleteProfile")" presubmit="validateForm('form',validateLoginForm)" method="post" id="form" data-indicator="false" data-strict-validator="false" data-submitButtonID="completeRegistration">
                    <div class="card-block">
                        <input type="hidden" id="userId" name="UserId" value="@Model.UserId" />
                        <div class="md-form">
                            <div class="md-form">
                                <select class="mdb-select" id="bankId" name="BankId" required>
                                    <option value="" disabled selected>Choose your option</option>
                                    @foreach (var bank in Model.Banks)
                                    {
                                        <option value="@bank.ID">@bank.Name</option>
                                    }
                                </select>

                                <label for="bankId">Bank<span style="color: red;"> *<span></span></span></label>
                            </div>
                        </div>
                        <div class="md-form">
                            <select class="mdb-select" id="accountTypeId" name="AccountTypeId" required>
                                <option value="" disabled selected>Choose your option</option>
                                @foreach (var accountType in Model.AccountTypes)
                                {
                                    <option value="@accountType.ID">@accountType.Name</option>
                                }
                            </select>

                            <label for="accountTypeId">AccountType<span style="color: red;"> *<span></span></span></label>
                        </div>
                        <div class="md-form">
                            <input type="text" id="accountNumber" name="AccountNumber" value="@Model.AccountNumber" class="form-control" required />
                            <label for="accountNumber" id="lAccountNumber" data-error="" data-success="">Account Number</label>
                        </div>
                        <div class="text-center">
                            <button type="button" id="completeRegistration" class="btn primary-color waves-effect waves-light">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>

@section scripts{

}